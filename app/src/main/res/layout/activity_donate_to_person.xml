<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Person Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#6200EE"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/txtPersonStory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Their story goes here..."
            android:textColor="#444444"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/inputAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter amount in RM"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp" />
        <CheckBox
            android:id="@+id/checkboxAnonymous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make this donation anonymous"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtAppFeeNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your kindness matters â€” 90% supports those in need, and 10% strengthens the Serene platform for future impact."
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginBottom="16dp" />
        <Button
            android:id="@+id/btnConfirmDonation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Donation"
            android:textAllCaps="false"
            android:backgroundTint="@color/button_red"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</ScrollView>
