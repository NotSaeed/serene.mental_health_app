<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How are you feeling today?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/imageAngry"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/emoji_angry"
                android:layout_margin="8dp"
                android:contentDescription="Angry" />

            <ImageView
                android:id="@+id/imageSad"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/emoji_sad"
                android:layout_margin="8dp"
                android:contentDescription="Sad" />

            <ImageView
                android:id="@+id/imageAnxious"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/emoji_anxious"
                android:layout_margin="8dp"
                android:contentDescription="Anxious" />

            <ImageView
                android:id="@+id/imageNeutral"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/emoji_neutral"
                android:layout_margin="8dp"
                android:contentDescription="Neutral" />

            <ImageView
                android:id="@+id/imageOkay"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/emoji_okay"
                android:layout_margin="8dp"
                android:contentDescription="Okay" />

            <ImageView
                android:id="@+id/imageHappy"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/emoji_happy"
                android:layout_margin="8dp"
                android:contentDescription="Happy" />
        </GridLayout>


        <EditText
            android:id="@+id/noteInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write a note (optional)..."
            android:minLines="3"
            android:gravity="top|start"
            android:background="@drawable/image_border"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />


        <Button
            android:id="@+id/saveMoodButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Mood"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />


        <Button
            android:id="@+id/viewTrendButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Mood Trend"
            android:backgroundTint="#03DAC5"
            android:textColor="#000000" />

        <Button
            android:id="@+id/viewSelfTrendButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VIEW SELF TREND"
            android:backgroundTint="#0080FF"
            android:textColor="@android:color/white"
            android:layout_marginBottom="20dp" />
    </LinearLayout>
</ScrollView>
